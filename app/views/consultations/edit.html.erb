<%= render "dashboards/dashboard_header" %>

<nav>
  <ul>
    <li><%= link_to "Manage Users", users_path %></li>
    <li class="active"><%= link_to "Calendar", pages_path %></li>
  </ul>
</nav>

<div class="form-box">
  <%= link_to "Back to Calendar", pages_path %>
  <p>
  <h3>Edit Event</h3>
  
  <% if notice %>
        <div class="flash flash__notice">
            <%= notice %>
        </div>
    <% end %>

  <%= render "form", consultation: @consultation %>

  <br>

  <div class="form-button" style="background-color:rgb(154, 27, 27)">
    <%= link_to 'Delete this event', @consultation, method: :delete %>
  </div>

</div>

<%= render "dashboards/dashboard_footer" %>