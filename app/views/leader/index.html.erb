<%= render "dashboards/dashboard_header" %>

<nav>
  <ul>
    <li ><%= link_to "Manage Users", users_path %></li>
    <li><%= link_to "Calendar", pages_path %></li>
    <li class="active"><%= link_to "Leader Boards", leader_path %></li>
  </ul>
</nav>

<div class="table-header"><h2>Mentors Leader board</h2></div>

<div class="admin-table-container">
  <div id="users">
      <table>
          <thead>
          <tr>
              <th class="user-column">Rank</th>
              <th class="user-column">Name</th>
              <th class="user-column">Hours</th>
              <th class="user-column">Points</th>
          </tr>
          </thead>
          <tbody>
          <% @ranking1.each do |rank| %>
          <tr>
              <td><%= @ranking1.find_index(rank) + 1 %></td>
              <td><%= rank[0].first_name %></td>
              <td> <%= rank[1] %> </td>
              <td> <%= rank[0].points %> </td>
              <td><%= link_to 'See Profile', user_path(rank[0].id) %>
          </tr>
          <% end %>
          </tbody>
      </table>
    </div>
    <br>
  </div>

