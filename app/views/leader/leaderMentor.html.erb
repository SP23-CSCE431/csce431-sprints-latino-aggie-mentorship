<%= render "dashboards/dashboard_header" %>
<nav>
  <ul>
    <li><%= link_to "Log Tutoring Hours", add_hours_path %></li>
    <li><%= link_to "Add Courses to Profile", add_courses_path %></li>
    <li><%= link_to "Calendar", pages_path %></li>
    <li class="active"><%= link_to "Leader Boards", leaderMentor_path %></li>
  </ul>
</nav>

<div class="table-container">
<h2>Mentors Leader board</h2>
<div id="users">
  <table>
    <thead>
      <tr>
        <th class="user-column">Rank</th>
        <th class="user-column">Name</th>
        <th class="user-column">Hours</th>
      </tr>
    </thead>
    <tbody>
      <% @ranking.first(3).each do |rank| %>
        <% if rank[1] > 0 %> 
          <tr>
            <td><%= @ranking.find_index(rank) + 1 %></td>
            <td><%= rank[0].first_name %></td>
           
            <td><%= link_to 'See Profile', user_path(rank[0].id) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<br>
</div>
</div>


